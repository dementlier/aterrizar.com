<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="ar.edu.unq.epers.aterrizar.models.Criteria"
		abstract="true" table="criterios">

		<id name="id" type="java.lang.Integer">
			<column name="id" />
			<generator class="increment" />
		</id>

		<discriminator column="discColumn" />

		<subclass name="ar.edu.unq.epers.aterrizar.models.CriteriaAnd"
			discriminator-value="AND">
			<list name="criterias" cascade="all ,delete" inverse="false">
				<key column="id" />
				<list-index column="indexColumn" />
				<one-to-many class="ar.edu.unq.epers.aterrizar.models.Criteria" />
			</list>
		</subclass>

		<subclass name="ar.edu.unq.epers.aterrizar.models.CriteriaOr"
			discriminator-value="OR">
			<list name="criterias" cascade="all ,delete" inverse="false">
				<key column="id" />
				<list-index column="indexColumn" />
				<one-to-many class="ar.edu.unq.epers.aterrizar.models.Criteria" />
			</list>
		</subclass>

		<subclass name="ar.edu.unq.epers.aterrizar.models.CriteriaEquals"
			discriminator-value="EQUALS">
			<property name="field" type="string" />
			<property name="value" type="string" />
		</subclass>
	</class>
</hibernate-mapping>