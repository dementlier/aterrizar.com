<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="ar.edu.unq.epers.aterrizar.models.Search" table="busquedas">

		<id name="id" type="java.lang.Integer">
			<column name="id" />
			<generator class="identity" />
		</id>
		
		<property name="flightOrder" column="flightOrder">
			<type name="org.hibernate.type.EnumType">
				<param name="enumClass">ar.edu.unq.epers.aterrizar.models.FlightOrder</param>
				<param name="useNamed">true</param>
			</type>
		</property>
		
		<list name="criterias" cascade="all" inverse="true" lazy="false">
			<key column="search_id" />
			<list-index column="indexColumn" />
			<one-to-many class="ar.edu.unq.epers.aterrizar.models.Criteria" />
		</list>
	</class>
</hibernate-mapping>