<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="ar.edu.unq.epers.aterrizar.models.Seat" table="asientos">

		<id name="id" type="java.lang.Integer">
			<column name="id" />
			<generator class="identity" />
		</id>

		<property name="price" column="price" type="int" />

		<property name="category" column="category">
			<type name="org.hibernate.type.EnumType">
				<param name="enumClass">ar.edu.unq.epers.aterrizar.models.SeatCategory</param>
				<param name="useNamed">true</param>
			</type>
		</property>

		<one-to-one name="reserver" class="ar.edu.unq.epers.aterrizar.models.User" />
	</class>
</hibernate-mapping>