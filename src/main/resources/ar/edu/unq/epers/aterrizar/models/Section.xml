<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="ar.edu.unq.epers.aterrizar.models.Section" table="secciones">

		<id name="id" type="java.lang.Integer">
			<column name="id" />
			<generator class="identity" />
		</id>

		<property name="price" column="price" type="int" />
		<property name="origin" column="price" type="string" />
		<property name="destination" column="price" type="string" />
		<property name="arrivalTime" column="price" type="java.sql.Date" />
		<property name="departureTime" column="price" type="java.sql.Date" />

		<bag name="seats" cascade="all">
			<key column="seat_id" />
			<one-to-many class="Seat" />
		</bag>
		
	</class>
</hibernate-mapping>